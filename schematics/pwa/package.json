{
  "author": "Maciej Treder <contact@maciejtreder.com>",
  "name": "@ng-toolkit/pwa",
  "main": "dist/index.js",
  "version": "8.0.4",
  "description": "Extension for @angular/pwa - adds server-side rendering fixes and update mechanism",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maciejtreder/ng-toolkit.git"
  },
  "scripts": {
    "build": "ng build --prod && tsc -p tsconfig.json && npm run copy_files",
    "copy_files": "cpy-cli collection.json dist/collection.json && cpy-cli src/schema.json dist/src/schema.json && cp-cli src/index.js dist/src/index.js",
    "test": "npm run build && jasmine src/**/*_spec.js",
    "test:dev": "npm run test && npm publish --registry http://localhost:4873",
    "postinstall": "node postinstall.js",
    "prepare": "npm test",
    "ci-publish": "ci-publish"
  },
  "keywords": [
    "schematics",
    "angular",
    "serverless",
    "server side rendering",
    "pwa",
    "progressive web app",
    "lambda",
    "amazon web services",
    "google cloud functions",
    "firebase"
  ],
  "license": "MIT",
  "schematics": "./collection.json",
  "peerDependencies": {
    "@angular/common": "^8.2.6",
    "@angular/core": "^8.2.6",
    "@angular/service-worker": "^8.2.6"
  },
  "dependencies": {
    "@bugsnag/js": "^6.4.0",
    "@ng-toolkit/_utils": "8.0.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.4",
    "@angular-devkit/build-ng-packagr": "^0.803.4",
    "@angular-devkit/core": "^8.3.3",
    "@angular-devkit/schematics": "^8.3.3",
    "@angular/cli": "^8.3.3",
    "@angular/common": "^8.2.6",
    "@angular/compiler": "^8.2.6",
    "@angular/compiler-cli": "^8.2.6",
    "@angular/core": "^8.2.6",
    "@angular/pwa": "^0.803.4",
    "@angular/service-worker": "^8.2.6",
    "@schematics/angular": "^8.3.4",
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.7.4",
    "ci-publish": "^1.3.1",
    "cpy-cli": "^3.0.0",
    "jasmine": "^3.4.0",
    "ng-packagr": "^5.5.0",
    "outdent": "^0.7.0",
    "rxjs": "^6.4.0",
    "tsickle": "^0.37.0",
    "typescript": "~3.5.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
