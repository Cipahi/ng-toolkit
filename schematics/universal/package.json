{
  "author": "Maciej Treder <contact@maciejtreder.com>",
  "name": "@ng-toolkit/universal",
  "main": "dist/index.js",
  "version": "8.0.0-beta.8",
  "description": "Adds Angular Universal support for any Angular CLI project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maciejtreder/ng-toolkit.git"
  },
  "scripts": {
    "build": "ng build --prod && tsc -p tsconfig.json && npm run copy_files",
    "copy_files": "cp-cli src/files dist/files && cp-cli collection.json dist/collection.json && cp-cli src/schema.json dist/schema.json",
    "test": "npm run build && jasmine src/**/*_spec.js",
    "postinstall": "node postinstall.js",
    "prepublish": "npm test",
    "ci-publish": "ci-publish"
  },
  "keywords": [
    "schematics",
    "angular",
    "serverless",
    "server side rendering",
    "pwa",
    "progressive web app",
    "lambda",
    "amazon web services",
    "google cloud functions",
    "firebase"
  ],
  "license": "MIT",
  "schematics": "./collection.json",
  "peerDependencies": {
    "@angular/common": "^8.2.6",
    "@angular/core": "^8.2.6"
  },
  "dependencies": {
    "@angular-devkit/core": "^8.3.3",
    "@angular-devkit/schematics": "^8.3.3",
    "@bugsnag/js": "^6.4.0",
    "@ng-toolkit/_utils": "8.0.0-beta.8",
    "@nguniversal/express-engine": "^8.1.1",
    "@schematics/angular": "^8.3.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.4",
    "@angular-devkit/build-ng-packagr": "^0.803.4",
    "@angular/cli": "^8.3.3",
    "@angular/common": "^8.2.6",
    "@angular/compiler": "^8.2.6",
    "@angular/compiler-cli": "^8.2.6",
    "@angular/core": "^8.2.6",
    "@ng-toolkit/pwa": "8.0.0-beta.2",
    "@ng-toolkit/serverless": "8.0.0-beta.8",
    "@types/jasmine": "^3.4.0",
    "@types/node": "^12.7.4",
    "ci-publish": "^1.3.1",
    "cp-cli": "^2.0.0",
    "jasmine": "^3.4.0",
    "ng-packagr": "^5.5.0",
    "rxjs": "^6.4.0",
    "tsickle": "^0.37.0",
    "typescript": "~3.5.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
